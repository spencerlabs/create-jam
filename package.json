{
  "name": "create-jam",
  "description": "Command Line Interface for quickly spinning up new Jamstack apps",
  "version": "0.1.2",
  "main": "./dist/src/create-jam.js",
  "bin": "./dist/src/create-jam.js",
  "license": "MIT",
  "files": [
    "dist"
