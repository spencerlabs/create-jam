    "inquirer": "^8.2.3",
    "listr": "^0.14.3",
    "shelljs": "^0.8.5",
    "slugify": "^1.6.5",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@spencerlabs/eslint-config": "^1.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.1",
    "@types/listr": "^0.14.4",
    "@types/node": "^18.11.17",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "extends": "@spencerlabs/eslint-config",
    "root": true,
